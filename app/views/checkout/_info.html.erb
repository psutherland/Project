<%= form_tag do %>
 
  <div class="field">
    <%= label_tag(:first_name, "First Name: ") %>
    <%= text_field_tag :first_name %>
  </div>
  <div class="field">
    <%= label_tag(:last_name, "Last Name: ") %>
    <%= text_field_tag :last_name %>
  </div>
  <div class="field">
    <%= label_tag(:address, "Address: ") %>
    <%= text_field_tag :address %>
  </div>
  <div class="field">
    <%= label_tag(:city, "City: ") %>
    <%= text_field_tag :city %>
  </div>
  <div class="field">
    <%= label_tag(:postal_code, "Postal Code: ") %>
    <%= text_field_tag :postal_code %>
  </div>
  <div class="field">
    <%= label_tag(:province_id, "Province: ") %>
    <%= collection_select(@customer, :province_id, @provinces, :id, :name, :selected => :province_id) %>
  </div>
<% end %>